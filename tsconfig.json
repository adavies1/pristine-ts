{
    "compilerOptions": {
        "outDir": "./dist/esm",
        "noImplicitAny": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": true,
        "lib": ["es6", "dom", "dom.iterable"],
        "sourceMap": true,
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.*"]
}
